{
	// editor
	"editor.autoIndent": "full",
	"editor.bracketPairColorization.enabled": true,
	"editor.codeLens": true,
	"editor.colorDecorators": false,
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.codeActionsOnSave": {
		"source.fixAll.shellcheck": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "explicit"
	},
	"editor.experimental.asyncTokenization": true,
	"editor.experimental.asyncTokenizationVerification": true,
	"editor.fontFamily": "'FantasqueSansM Nerd Font', 'JetBrainsMono Nerd Font'",
	"editor.fontLigatures": true,
	"editor.fontSize": 15,
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": "active",
	"editor.hideCursorInOverviewRuler": false,
	"editor.inlineSuggest.enabled": true,
	"editor.insertSpaces": false,
	"editor.lineHeight": 21,
	"editor.minimap.enabled": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.occurrencesHighlightDelay": 0,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "auto",
	"editor.scrollbar.verticalScrollbarSize": 5,
	"editor.scrollBeyondLastLine": true,
	"editor.semanticHighlighting.enabled": true,
	"editor.tabSize": 2,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"editor.useTabStops": true,

	// files
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.associations": {
		".eslintrc.*.json": "jsonc",
		".eslintrc.json": "jsonc",
		"*.json5": "jsonc",
		"**/.azure-pipelines/**/*.yaml": "azure-pipelines",
		"**/.azure-pipelines/jobs/*.yaml": "azure-pipelines",
		"**/*.json.hbs": "jsonc",
		"**/CODEOWNERS": "ini",
		"**/package.json.hbs": "json",
		"**/NuGet.config": "xml"
	},
	"files.exclude": {
		".venv": true,
		".vscode-test": true,
		"**.lock": true,
		"**/__pycache__": true,
		"**/.cache": true,
		"**/.coverage": true,
		"**/.DS_Store": true,
		"**/.eslintcache": true,
		"**/.git": true,
		"**/.hg": true,
		"**/.mypy_cache/**": true,
		"**/.pytest_cache/**": true,
		"**/.ruff_cache": true,
		"**/.svn": true,
		"**/*.class": true,
		"**/*.pyc": true,
		"**/coverage": true,
		"**/node_modules": true,
		"**/Thumbs.db": true
	},
	"files.watcherExclude": {
		"**/.git": true,
		"**/coverage": true,
		"**/node_modules": true,
		"**/out/*": true,
		"**/temp": true
	},

	// search
	"search.exclude": {
		".vscode-test": true,
		"**/.pnp.*": true,
		"**/.venv/**": true,
		"**/.yarn": true,
		"**/*.svg": true,
		"**/bower_components": true,
		"**/coverage": true,
		"**/node_modules": true,
		"**/temp": true
	},

	// workbench
	"workbench.activityBar.location": "bottom",
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.enablePreview": true,
	"workbench.editor.labelFormat": "medium",
	"workbench.editor.tabActionCloseVisibility": false,
	"workbench.editor.tabSizing": "shrink",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.layoutControl.enabled": false,
	"workbench.list.smoothScrolling": true,
	"workbench.panel.defaultLocation": "left",
	"workbench.sideBar.location": "right",
	"workbench.startupEditor": "none",
	"workbench.statusBar.visible": false,
	"workbench.tips.enabled": false,

	// terminal
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorStyleInactive": "line",
	"terminal.integrated.cursorWidth": 1,
	"terminal.integrated.enableMultiLinePasteWarning": "auto",
	"terminal.integrated.enableVisualBell": true,
	"terminal.integrated.minimumContrastRatio": 1,
	"terminal.integrated.shellIntegration.decorationsEnabled": "never",
	"terminal.integrated.shellIntegration.enabled": false,
	"terminal.integrated.stickyScroll.enabled": false,
	"accessibility.signals.terminalBell": {
		"sound": "off"
	},

	// window
	"window.commandCenter": false,
	"window.menuBarVisibility": "compact",
	"window.titleBarStyle": "custom",
	"window.title": " ",

	// explorer
	"explorer.compactFolders": true,
	"explorer.sortOrder": "type",

	// zen mode
	"zenMode.hideLineNumbers": false,

	// catppuccin theme
	"catppuccin.bracketMode": "neovim",
	"catppuccin.extraBordersEnabled": true,
	"catppuccin.workbenchMode": "flat",
	"catppuccin.customUIColors": {
		"all": {
			"activityBar.background": "base",
			"activityBar.border": "base",
			"badge.background": "base",
			"editor.background": "base",
			"editorGroupHeader.tabsBackground": "base",
			"editorGroupHeader.noTabsBackground": "base",
			"editorPane.background": "base",
			"scrollbar.shadow": "base",
			"scrollbarSlider.activeBackground": "base",
			"scrollbarSlider.background": "base",
			"sideBar.background": "base",
			"sideBar.border": "base",
			"sideBarSectionHeader.background": "base",
			"tab.inactiveBackground": "base",
			"tab.unfocusedActiveBackground": "base",
			"tab.unfocusedInactiveBackground": "base"
		}
	},

	// glassit - transparency
	"glassit.alpha": 245,

	// telemetry
	"redhat.telemetry.enabled": false,
	"telemetry.telemetryLevel": "off",

	// git
	"git.allowForcePush": true,
	"git.autofetch": true,
	"git.autorefresh": true,
	"git.decorations.enabled": true,
	"git.enableSmartCommit": true,
	"git.ignoreLimitWarning": true,
	"git.openRepositoryInParentFolders": "never",
	"git.pullBeforeCheckout": true,
	"git.branchProtection": ["main"],
	"git.mergeEditor": true,
	"git.showInlineOpenFileAction": false,

	// github pull requests
	"githubPullRequests.assignCreated": "${user}",

	// diff
	"diffEditor.renderSideBySide": true,

	// code-runner
	"code-runner.clearPreviousOutput": true,
	"code-runner.enableAppInsights": false,
	"code-runner.ignoreSelection": true,
	"code-runner.saveFileBeforeRun": true,
	"code-runner.showExecutionMessage": false,

	// polacode settings
	"polacode.transparentBackground": true,
	"polacode.target": "snippet",

	// tabnine
	"tabnine.experimentalAutoImports": true,

	// shellcheck
	"shellcheck.enable": true,
	"shellcheck.enableQuickFix": true,
	"shellcheck.useWorkspaceRootAsCwd": true,

	// prettier
	"prettier.configPath": ".prettierrc",
	"prettier.ignorePath": ".prettierignore",
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 120,
	"prettier.singleQuote": true,
	"prettier.useEditorConfig": true,
	"prettier.useTabs": true,

	// eslint
	"eslint.enable": true,
	"eslint.ignoreUntitled": true,
	"eslint.lintTask.enable": true,
	"eslint.workingDirectories": [{ "mode": "auto" }],

	// cSpell
	"cSpell.allowCompoundWords": true,
	"cSpell.diagnosticLevel": "Hint",
	"cSpell.language": "en,en-US",
	"cSpell.words": ["catppuccin", "macchiato"],

	// better-comments
	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#f38ba8",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": true
		},
		{
			"tag": "?",
			"color": "#74c7ec",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": true
		},
		{
			"tag": "//",
			"color": "#6c7086",
			"strikethrough": true,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "todo",
			"color": "#fab387",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": true
		},
		{
			"tag": "*",
			"color": "#a6e3a1",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": true
		}
	],

	// per language settings
	"[plaintext]": { "files.insertFinalNewline": false },
	"[shellscript]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
	"[lua]": { "editor.defaultFormatter": "sumneko.lua" },
	"[log]": { "editor.largeFileOptimizations": false },
	"[github-issues]": { "editor.wordWrap": "on" },

	// css
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"css.format.spaceAroundSelectorSeparator": true,

	// json
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true,
		"editor.suggest.insertMode": "replace"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true,
		"editor.suggest.insertMode": "replace"
	},
	"json.format.enable": false,

	// yaml
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},

	// html
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"html.format.enable": true,
	"html.format.preserveNewLines": true,

	// handlebars
	"[handlebars]": {
		"editor.formatOnSave": false
	},

	// typescript
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"typescript.experimental.expandableHover": true,
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.quoteStyle": "single",
	"typescript.tsdk": "./node_modules/typescript/lib",
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},

	// javascript
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.importModuleSpecifierEnding": "js",

	// powershell
	"[powershell]": {
		"files.encoding": "utf8bom",
		"files.autoGuessEncoding": true
	},
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.addWhitespaceAroundPipe": true,
	"powershell.codeFormatting.alignPropertyValuePairs": true,
	"powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
	"powershell.codeFormatting.ignoreOneLineBlock": true,
	"powershell.codeFormatting.trimWhitespaceAroundPipe": true,
	"powershell.codeFormatting.whitespaceAfterSeparator": true,
	"powershell.codeFormatting.whitespaceAroundOperator": true,
	"powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
	"powershell.codeFormatting.whitespaceBeforeOpenParen": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"powershell.codeFormatting.whitespaceInsideBrace": true,

	// markdown
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"files.trimTrailingWhitespace": false
	},
	"markdownlint.config": {
		"MD024": false,
		"MD033": false,
		"MD034": false,
		"MD038": false,
		"MD042": false
	}
}
